<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    tools:context="com.moralesf.masquerade.android.chat.ChatFragment"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_light"
        android:focusableInTouchMode="true"
        >
        <EditText
            android:id="@+id/new_chat_chat_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:hint="22/12/2011 18:05:37"
            android:maxLength="999999999"
            android:maxLines="5"
            android:gravity="bottom"
            android:textColor="@color/text_secondary"
            android:drawableEnd="@drawable/ic_action_send"
            android:drawableRight="@drawable/ic_action_send"
            android:imeOptions="normal"
            />
    </LinearLayout>


</RelativeLayout>
